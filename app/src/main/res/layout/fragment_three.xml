<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="10"
            tools:context=".ui.fragment.ThreeFragment">

            <LinearLayout
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="10"
                android:layout_height="0dp">

                <TextView
                    android:layout_weight="7"
                    android:text="Tài khoản"
                    android:gravity="left"
                    android:padding="5dp"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_weight="2.5"
                    android:background="@drawable/bg_setting"
                    android:layout_width="0dp"
                    android:gravity="left"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/icon_setting"
                        android:padding="7dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Cài đặt"
                        android:paddingRight="5dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1.3">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_launcher_background" />

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_full_name"
                        android:text="Nguyen quan Chinh"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_position"
                        android:textColor="#818181"
                        android:text="Joc"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#D1D0D0" />

                    <LinearLayout
                        android:layout_marginTop="7dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:weightSum="10"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="9"
                            android:layout_height="match_parent"
                            android:text="Hồ sơ nhân viên"
                            android:textSize="18sp" />

                        <ImageView
                            android:src="@drawable/icon_next"
                            android:layout_marginLeft="10dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="3dp"
                android:background="#D1D0D0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="10"
                android:layout_weight="0.5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Ví GHTKPay"
                    android:textStyle="bold"
                    android:layout_weight="6"
                    android:textSize="18sp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="5dp" />

                <ImageView
                    android:src="@drawable/baseline_visibility_off_24"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="******"
                    android:textStyle="bold"
                    android:gravity="center" />

                <ImageView
                    android:src="@drawable/icon_next"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:weightSum="10"
                android:layout_weight="1">

                <LinearLayout
                    android:background="#E8E3E3"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/ic_launcher_background"
                        android:layout_width="40dp"
                        android:layout_height="50dp" />

                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Nạp data" />
                </LinearLayout>

                <LinearLayout
                    android:background="#E8E3E3"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_width="0dp"
                    android:layout_weight="3.2"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/ic_launcher_background"
                        android:layout_width="40dp"
                        android:layout_height="50dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:text="Di động trả trước" />
                </LinearLayout>

                <LinearLayout
                    android:background="#E8E3E3"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="2.3"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/ic_launcher_background"
                        android:layout_width="40dp"
                        android:layout_height="50dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:text="Bảo hiểm PVI" />
                </LinearLayout>

                <LinearLayout
                    android:background="#E8E3E3"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="2.3"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/ic_launcher_background"
                        android:layout_width="40dp"
                        android:layout_height="50dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:text="Hóa đơn điện" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="10dp"
                android:background="#D1D0D0" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hành trình"
                        android:textColor="#09AC10" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_marginTop="10dp"
                        android:background="#09AC10" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hoạt động"
                    android:layout_marginLeft="15dp"
                    android:textColor="#A8A7A7" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_history"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6.2" />
        </LinearLayout>
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:visibility="gone"
            android:layout_gravity="center" />
    </FrameLayout>
</layout>